{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "@arrow/*": ["./src/assets/arrow/*"],
      "@components/*": ["./src/components/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@images/*": ["./src/assets/images/*"],
      "@services/*":  ["./src/services/*"],
      "@logo/*": ["./src/assets/logo/*"],
      "@pages/*": ["./src/pages/*"],
      "@svg/*": ["./src/assets/svg/*"],
      "@styles/*": ["./src/styles/*"],
      "@routes/*": ["./src/routes/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
}
