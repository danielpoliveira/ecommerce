{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "@arrow/*": ["./src/assets/arrow/*"],
      "@components/*": ["./src/components/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@services/*":  ["./src/services/*"],
      "@logo/*": ["./src/assets/logo/*"],
      "@pages/*": ["./src/pages/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
}
